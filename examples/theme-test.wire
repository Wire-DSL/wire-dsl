project " Test" {
  style {
    density: "compact"
    spacing: "lg"
    radius: "md"
    stroke: "normal"
    font: "base"
  }

  screen Dashboard {
    layout stack(direction: vertical, gap: md, padding: lg) {
      component Heading text: "Welcome to  Test"
      component Text content: "This project uses the new style block syntax"
      
      layout grid(columns: 12, gap: md) {
        cell span: 4 {
          component Button text: "Action 1" variant: primary
        }
        cell span: 4 {
          component Button text: "Action 2" variant: secondary
        }
        cell span: 4 {
          component Button text: "Action 3"
        }
      }
    }
  }
}
