project "Mobile Wireframe Demo" {
  style {
    device: "mobile"
    density: "comfortable"
    // spacing: "md"
    // radius: "md"
    // stroke: "normal"
    // font: "base"
  }

  screen Home {
    layout stack(direction: vertical, gap: md, padding: md) {
      component Heading text: "Mobile App"
      component Text content: "This wireframe is designed for mobile devices with 375px width (iPhone SE baseline). The height adjusts dynamically based on content."

      component Button text: "Get Started" variant: primary
      component Button text: "Learn More" variant: secondary

      component Image src: "hero.jpg" aspectRatio: landscape

      component Heading text: "Features" level: h2

      layout grid(columns: 1, gap: md) {
        layout card(padding: md) {
          component Heading text: "Fast" level: h3
          component Text content: "Built for speed and performance on mobile devices."
        }

        layout card(padding: md) {
          component Heading text: "Simple" level: h3
          component Text content: "Intuitive interface designed for touch interactions."
        }

        layout card(padding: md) {
          component Heading text: "Secure" level: h3
          component Text content: "Your data is protected with industry-standard encryption."
        }
      }

      component Divider

      component Text content: "Mobile-optimized wireframe for touch devices"
    }
  }

  screen Details {
    layout stack(direction: vertical, gap: md, padding: md) {
      component Heading text: "Product Details"
      component Image src: "product.jpg" aspectRatio: square
      component Heading text: "Description" level: h2
      component Text content: "This is a detailed view optimized for mobile screens. All content flows naturally in a single column."
      component Button text: "Add to Cart" variant: primary
      component Button text: "Back" variant: secondary
    }
  }
}
