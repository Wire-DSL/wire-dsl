project "Topbar Test" {
  config {
    density: "normal"
    spacing: "md"
    radius: "md"
    stroke: "normal"
    font: "base"
  }

  screen WithSubtitle {
    layout stack(direction: vertical, gap: lg, padding: xl) {
      component Topbar title: "With Subtitle" subtitle: "This has a subtitle"
      component StatCard title: "Test" value: "Content"
    }
  }

  screen WithoutSubtitle {
    layout stack(direction: vertical, gap: lg, padding: xl) {
      component Topbar title: "No Subtitle"
      component StatCard title: "Test" value: "Content"
    }
  }
}
