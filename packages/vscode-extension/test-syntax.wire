// This is a Wire DSL example file for syntax highlighting testing
// Color indicators: keywords should be blue, components orange, strings green, etc.

project "Wire DSL Test Dashboard" {
  // Test keywords and components
  screen TestScreen {
    grid {
      columns: 3
      gap: md
      
      Card {
        id: "test-card-1"
        label: "Test Card"
        background: #FFFFFF
      }
      
      Button {
        id: "test-button"
        label: "Click Me"
        color: #3B82F6
      }
      
      Input {
        id: "test-input"
        placeholder: "Enter text"
        disabled: false
      }
    }
  }
  
  screen StackExample {
    stack {
      direction: vertical
      gap: lg
      padding: xl
      
      Heading {
        label: "Stack Layout Test"
        fontSize: 24
      }
      
      Text {
        label: "This demonstrates vertical stacking"
      }
      
      Button {
        label: "Submit"
      }
    }
  }
  
  screen FormExample {
    form {
      columns: 2
      gap: md
      
      Input {
        id: "name"
        label: "Full Name"
        required: true
      }
      
      Input {
        id: "email"
        label: "Email"
        type: "email"
        required: true
      }
      
      Textarea {
        id: "message"
        label: "Message"
        rows: 5
      }
      
      Button {
        label: "Send"
      }
    }
  }
}

/* 
  Block comment test
  Multiple lines should all be highlighted as comments
  This is useful for documenting complex sections
