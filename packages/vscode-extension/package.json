{
  "name": "wire-dsl",
  "displayName": "Wire DSL",
  "description": "Syntax highlighting, autocompletion, and preview for Wire DSL (.wire) files",
  "version": "0.1.0",
  "publisher": "wire-dsl",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "dsl",
    "wire",
    "ui",
    "declarative",
    "dashboard"
  ],
  "activationEvents": [
    "onLanguage:wire"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wire",
        "aliases": [
          "Wire DSL",
          "wire"
        ],
        "extensions": [
          ".wire"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/wire-light.svg",
          "dark": "./icons/wire-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "wire",
        "scopeName": "source.wire",
        "path": "./syntaxes/wire.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run esbuild",
    "test": "vitest",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.18.0",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.9.0",
    "vitest": "^0.34.0"
  }
}
