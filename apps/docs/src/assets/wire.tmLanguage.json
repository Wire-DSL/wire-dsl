{
  "scopeName": "source.wire",
  "name": "Wire DSL",
  "fileTypes": [
    "wire"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#components"
    },
    {
      "include": "#properties"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#colors"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.wire",
          "match": "//.*$"
        },
        {
          "name": "comment.block.wire",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.wire",
          "match": "\\b(project|screen|layout|component|cell|define)\\b"
        },
        {
          "name": "keyword.declaration.wire",
          "match": "\\b(style|colors|mocks)\\b"
        },
        {
          "name": "keyword.control.wire",
          "match": "\\b(stack|grid|panel|split|card)\\b"
        },
        {
          "name": "keyword.other.wire",
          "match": "\\b(Component)\\b"
        }
      ]
    },
    "components": {
      "patterns": [
        {
          "name": "entity.name.class.wire",
          "match": "\\b(Heading|Text|Label|Paragraph|Button|Link|Input|Textarea|Select|Checkbox|Radio|Toggle|Topbar|SidebarMenu|Sidebar|Breadcrumbs|Tabs|Table|List|Stat|Card|Chart|Code|Image|Icon|IconButton|Divider|Separate|Badge|Alert|Modal)\\b"
        }
      ]
    },
    "properties": {
      "patterns": [
        {
          "name": "variable.other.property.wire",
          "match": "\\b(id|width|height|title|subtitle|text|content|code|caption|label|placeholder|items|itemsMock|icons|active|variant|user|icon|rows|rowsMock|columns|separator|actions|checked|enabled|pagination|pages|paginationAlign|mock|random|sidebar|direction|gap|padding|size|level|background|align|radius|border|density|spacing|stroke|font|theme|device|type|value|color)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.wire",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wire",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.wire",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.wire",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "colors": {
      "patterns": [
        {
          "name": "constant.color.hex.wire",
          "match": "#[0-9A-Fa-f]{3}([0-9A-Fa-f]{3})?\\b"
        },
        {
          "name": "constant.color.named.wire",
          "match": "\\b(primary|secondary|success|error|warning|info|light|dark|gray|white|black|transparent)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.wire",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.numeric.spacing.wire",
          "match": "\\b(xs|sm|md|lg|xl)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.wire",
          "match": ":|="
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.wire",
          "match": "[{}\\[\\]()]"
        },
        {
          "name": "punctuation.separator.wire",
          "match": "[,;]"
        }
      ]
    }
  }
}
